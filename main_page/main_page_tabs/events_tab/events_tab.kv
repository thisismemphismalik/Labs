#:import SeeMore components.see_more.see_more.SeeMore

<EventsTab>
    name: "TicketsTab"
    md_bg_color: 0,0,0,1

    ScrollView:
        do_scroll_x: False
        bar_width: 0
        id: scroller
        on_scroll_y: root.copyright(self)

        MDBoxLayout:
            # root boxlayout
            orientation: "vertical"
            adaptive_height: True
            padding: [0,0,0,30]
            md_bg_color: 1,1,1,1

            Header:
                current_page: "évènements"

            MDBoxLayout:
                id: all_container
                spacing: 25
                orientation: "vertical"
                adaptive_height: True

                MDBoxLayout:
                    # categories_frame container
                    id: first_scroll
                    spacing: 25
                    orientation: "vertical"
                    adaptive_height: True

                MDBoxLayout:
                    # events container
                    id: second_scroll
                    spacing: 25
                    orientation: "vertical"
                    adaptive_height: True

                    MDLabel:
                        text: "Threading"
                        font_size: 35
                        pos_hint: {"x": .11}
                SeeMore:
                    id: see_more
                    adaptive_height: True
                    on_release: root.see_more(13, False)

                MDBoxLayout:
                    # change screen frame
                    size_hint: 1, None
                    height: 20

                    MDLabel:
                        text: "cliquer sur"
                        adaptive_width: True
                        halign: "right"

                    MDIconButton:
                        icon: "card-search-outline"
                        on_release: root.change_screen()
                        pos_hint: {"center_y":.55}

                    MDLabel:
                        text: "pour rechercher des tickets"
