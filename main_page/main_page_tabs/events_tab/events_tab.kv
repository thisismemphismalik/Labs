#:import Category components.category.category.Category
#:import SeeMore components.see_more.see_more.SeeMore

<EventsTab>
    name: "TicketsTab"
    md_bg_color: 0,0,0,1

    ScrollView:
        do_scroll_x: False
        bar_width: 0
#        effect_cls: StiffScrollEffect

        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            padding: [0,0,0,30]
            md_bg_color: 1,1,1,1

            Header:
                current_page: "évènements"

            MDBoxLayout:
                spacing: 25
                orientation: "vertical"
                adaptive_height: True

                MDBoxLayout:
                    id: first_scroll
                    spacing: 25
                    orientation: "vertical"
                    adaptive_height: True

                MDBoxLayout:
                    id: second_scroll
                    spacing: 25
                    orientation: "vertical"
                    adaptive_height: True

                    MDLabel:
                        text: "Threading"
                        font_size: 35
                        pos_hint: {"x": .11}
                SeeMore:
                    adaptive_height: True

                MDBoxLayout:
#                    adaptive_height: True
                    size_hint: 1, None
                    height: 20

                    MDLabel:
                        text: "cliquer sur"
                        adaptive_width: True
                        halign: "right"

                    MDIconButton:
                        icon: "card-search-outline"
#                        on_release: root.change_screen()
                        pos_hint: {"center_y":.55}

                    MDLabel:
                        text: "pour rechercher des tickets"