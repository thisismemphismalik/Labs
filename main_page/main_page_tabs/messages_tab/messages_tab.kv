#:import StiffScrollEffect kivymd.effects.stiffscroll.StiffScrollEffect

<MessagesTab>
    name: "MessagesTab"
    md_bg_color: 1,1,1,1

    ScrollView:
        do_scroll_x: False
        bar_width: 0
        effect_cls: StiffScrollEffect

        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            padding: [0,0,0,30]
            md_bg_color: 1,1,1,1

            Header:
                current_page: "messages"

            MDBoxLayout:
                padding: [0,0,0,25]
                id: unread
                spacing: 0
                orientation: "vertical"
                adaptive_height: True
                md_bg_color: 1,0,0,.3

            MDBoxLayout:
                id: read
                spacing: 0
                orientation: "vertical"
                adaptive_height: True
                md_bg_color: 0,1,0,.3