<ProfileTab>
    name: "ProfileTab"
    md_bg_color: 0,0,0,1

    ScrollView:
        do_scroll_x: False
        bar_width: 0
        md_bg_color: 1,1,1,1
#        on_scroll_y: root.copyright(self)

        MDBoxLayout:
            id: racine
            orientation: "vertical"
            adaptive_height: True
#            spacing: 15
            padding: [0,0,0,30]
            md_bg_color: 1,1,1,1

            Header:
                current_page: "profil"

            MDBoxLayout:
                md_bg_color: 1,1,1,1
                id: first_scroll
                padding: [0, 0, 0, 0]
                spacing: 0
                orientation: "vertical"
                adaptive_height: True

                MDBoxLayout:
                    orientation: "vertical"
                    size_hint: 1, None
                    height: 175

                    MDBoxLayout:
                        padding: [0,0,15,0]
                        spacing: 10

                        MDBoxLayout:
                            id: left_box
                            pos_hint: {"bottom": 1}
                            orientation: "vertical"
                            size_hint: None, 1
                            width: 150
                            padding: [0,0,0,0]

                            FitImage:
                                id: image
                                size_hint: None, None
                                size: 125, 125
                                pos_hint: {"center_x": .6}
                                radius: [35]
                                source: ""

                            MDBoxLayout:
                                id: verifier
#                                md_bg_color: 1,0,0,.3
#                                opacity: 0
                                size_hint: 1, None
                                height: 25
                                spacing: 5
                                padding: [15,0]
                                adaptive_width: True
                                pos_hint: {"center_x": .6}

                                MDIcon:
                                    icon: "alert-decagram"
                                    theme_text_color: "Custom"
                                    text_color: 1,0,0,.7
                                    adaptive_size: True
                                    pos_hint: {"center_y": .55}

                                MDTextButton:
                                    text: "incomplet"
                                    font_size: 20
                                    theme_text_color: "Custom"
                                    text_color: 1,0,0,.7
                                    adaptive_height: True
                                    pos_hint: {"center_y": .55}
                                    on_release: root.verify(verifier)

                        MDSeparator:
                            size_hint: None, None
                            size: 1.5, 100
                            pos_hint: {"center_y": .5}
                            md_bg_color: 0,0,0,1

                        MDFloatLayout:
#                            md_bg_color: 1,0,0,.3
                            MDBoxLayout:
                                # name boxes
#                                md_bg_color: 1,1,0,.3
                                pos_hint: {"center_x": .5, "center_y": .5}

                                MDBoxLayout:
                                    id: names_box
                                    size_hint: 1, None
                                    height: 150
                                    adaptive_height: True
#                                    md_bg_color: 0,0,1,.3
                                    pos_hint: {"center_y": .5}
                                    orientation: "vertical"

                                    MDLabel:
                                        text: " "
                                        font_size: 35
                                        adaptive_height: True

                                    MDLabel:
                                        text: " "
                                        font_size: 35
                                        adaptive_height: True

                                    MDLabel:
                                        text: " "
                                        font_size: 35
                                        adaptive_height: True

                            MDIconButton:
                                icon: "cog"
                                theme_text_color: "Custom"
                                text_color: 0,0,0,.7
                                adaptive_size: True
                                pos_hint: {"right": .95, "top": .3}
#                                on_release: first_scroll.export_to_png("first_scroll.png")

                MDSeparator:
