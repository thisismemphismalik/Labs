<ProfileTab>
    name: "ProfileTab"
    md_bg_color: 0,0,0,1

    ScrollView:
        do_scroll_x: False
        bar_width: 0
        md_bg_color: 1,1,1,1
#        on_scroll_y: root.copyright(self)

        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            padding: [0,0,0,30]
            md_bg_color: 1,1,1,1

            Header:
                current_page: "profil"

            MDBoxLayout:
                id: first_scroll
                padding: [0, 0, 0, 0]
                spacing: 0
                orientation: "vertical"
                adaptive_height: True

                MDBoxLayout:
                    orientation: "vertical"
                    size_hint: 1, None
                    height: 200

                    MDBoxLayout:
                        padding: [25,0,0,0]

                        MDBoxLayout:
                            pos_hint: {"bottom": 1}
                            orientation: "vertical"
#                            md_bg_color: 1,1,0,.3
                            size_hint: None, 1
                            width: 150

                            FitImage:
                                size_hint: None, None
                                size: 150, 150
                                pos_hint: {"bottom": 1}
                                radius: [55]
                                source: "./lnx.png"

                            MDBoxLayout:
#                                md_bg_color: 1,1,0,.3
                                size_hint: 1, None
                                height: 25
                                spacing: 5
                                padding: [15,0]
                                adaptive_width: True
                                pos_hint: {"center_x": .5}

                                MDIcon:
                                    icon: "alert-decagram"
                                    theme_text_color: "Custom"
                                    text_color: 1,0,0,.7
                                    adaptive_size: True
                                    pos_hint: {"center_y": .55}

                                MDTextButton:
                                    text: "incomplet"
                                    font_size: 20
                                    theme_text_color: "Custom"
                                    text_color: 1,0,0,.7
                                    adaptive_height: True
                                    pos_hint: {"center_y": .55}


                        MDBoxLayout:
                            # name boxes
                            md_bg_color: 1,1,0,.3


                MDSeparator:
