#:import BlackButton components.black_button.black_button.BlackButton
<See>
    text: "voir plus"

<SearchTab>
    name: "SearchTab"
    md_bg_color: 1,1,1,1

    MDFloatLayout:
        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            padding: [0,0,0,30]
            md_bg_color: 1,1,1,1
            pos_hint: {"top": 1}
#            spacing:25

            Header:
                current_page: "recherche"

            MDBoxLayout:
                id: search_bar
                adaptive_height: True
                padding: [15,0,0,0]
#                md_bg_color: 0,0,0,.3

                MDTextField:
                    id: field
                    hint_text: "    tapez votre recherche"
#                    adaptive_height: True
                    size_hint: .8, 1.1
                    on_focus: root.correction(self)
                    on_text_validate: root.research(self.text)

                MDIconButton:
                    icon: "magnify"
                    on_release: root.research(field.text)

            MDSeparator:

            ScrollView:
                id: scroller
                do_scroll_x: False
                size_hint: 1, None
                height: 470
                bar_width: 2

                MDBoxLayout:
                    id: results
                    orientation: "vertical"
                    adaptive_height: True

