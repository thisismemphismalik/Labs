#:import TreizeTickets main_page.main_page_tabs.home_tab.components.treize_tickets.treize_tickets.TreizeTickets
#:import ToolbarButton components.toolbar.toolbar_button.toolbar_button.ToolbarButton
#:import Header components.header.header.Header

<HomeTab>
    name: "HomeTab"
    md_bg_color: 0,0,0,1

    ScrollView:
        do_scroll_x: False
        bar_width: 0
        md_bg_color: 1,1,1,1
        on_scroll_y: root.copyright(self)

        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            padding: [0,0,0,30]
            md_bg_color: 1,1,1,1

            Header:
                current_page: "accueil"

            MDBoxLayout:
                id: first_scroll
                padding: [0, 15, 0, 0]
                spacing: 0
                orientation: "vertical"
                adaptive_height: True

            MDBoxLayout:
                adaptive_height: True

                MDLabel:
                    text: "cliquer"
                    adaptive_width: True
                    halign: "right"

                MDIconButton:
                    icon: "ticket-confirmation-outline"
                    on_release: root.change_screen()

                MDLabel:
                    text: "pour voir tous les tickets"