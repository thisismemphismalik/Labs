#:import ToolbarButton components.toolbar.toolbar_button.toolbar_button.ToolbarButton

<Toolbar>
    red_alarm: [1,0,0,1]

    md_bg_color: 0,0,0,1
    size_hint: 1, None
    height: 45

    canvas.after:
        Color:
            rgba: self.red_alarm
        RoundedRectangle:
            size: 5, 5
            pos: self.pos[0]+(self.width/2)-1.5, self.pos[1]+33
            radius: [5]

    MDBoxLayout:
        adaptive_width: True
#        md_bg_color: 1,1,1,.3
        pos_hint: {"center_x": .5}
        spacing: 17

        ToolbarButton:
            icon: "home-lightbulb"
            selected: True
            tab: "HomeTab"
            opacity: 1

        ToolbarButton:
            icon: "ticket-confirmation-outline"
            tab: "TicketsTab"

        ToolbarButton:
            message: True
            icon: "card-text-outline"
            tab: "MessagesTab"

        ToolbarButton:
            icon: "card-search-outline"
            tab: "SearchTab"

        ToolbarButton:
            icon: "face-outline"
            tab: "ProfileTab"
