#:import Box components.box.box.Box

<TreizeTickets>

    pos_hint: {"top": 1}
#    md_bg_color: 0,1,1,.3
    padding: [0, 10, 0, 10]
    spacing: 10
    orientation: "vertical"
    adaptive_height: True

    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: True
        spacing: 10
        MDLabel:
            adaptive_height: True
            text: root.header
            font_size: 35
            pos_hint: {"x": .11}

        ScrollView:
            bar_width: 0
            size_hint_y: None
            height: 220
            do_scroll_y: False
            do_scroll_x: True

            MDBoxLayout:
                id: boxes_container
                spacing: 25
                padding: [25,0]
                adaptive_width: True
                orientation: "horizontal"

