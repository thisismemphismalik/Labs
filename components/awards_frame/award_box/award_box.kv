#:import AKCircularProgress kivymd_extensions.akivymd.uix.progresswidget.AKCircularProgress

<AwardBox>
#    md_bg_color: 1,0,0,.3
    elevation: 0
    title: "award"
    icon: "apple"
    pos_hint: {"center_x": .5}
    on_press: progress_relative.current_percent += 1

    MDBoxLayout:
        orientation: "vertical"
        size_hint: 2/3, 1
        md_bg_color: 0,1,0,1

        MDLabel:
            text: "troph√©e"
            italic: True
            font_size: 25

        MDLabel:
            text: "SUPERNOVA"
            bold: True
            font_size: 25

    MDFloatLayout:
#        md_bg_color: 0,1,1,.3
        size_hint: 1/3, 1

        AKCircularProgress:
            id: progress_relative
            line_width: 3
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: None, None
            size: 75, 75
            percent_type: "percent"
            start_deg: 240
            end_deg: 480
            percent_type: "relative"
            max_percent: 5
