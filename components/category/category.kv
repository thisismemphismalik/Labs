<Category>

    pos_hint: {"center_x": .5, "center_y": .5}
    size_hint: None, None
    orientation: "vertical"
    size: 250, 200
    elevation: 1
    md_bg_color: self.color
    radius: 15

    MDBoxLayout:
        adaptive_height: True
        height: 150
        radius: [15,15,0,0]

        MDGridLayout:
            cols: 2
            rows: 2
            radius: [15,15,0,0]

            FitImage:
                source: root.images[0]
                radius: [15,0,0,0]

            FitImage:
                source: root.images[1]
                radius: [0,15,0,0]

            FitImage:
                source: root.images[2]

            FitImage:
                source: root.images[3]

    MDBoxLayout:
        orientation: "vertical"
        spacing: 4
        padding: [0,3,0,0]

        MDLabel:
            text: root.name.upper()
            adaptive_size: True
            font_size: 18
            bold: True
            pos_hint: {"center_x": .5}
            theme_text_color: "Custom"

        MDLabel:
            text: root.events
            adaptive_size: True
            font_size: 17
            pos_hint: {"center_x": .5}
            theme_text_color: "Custom"
            text_color: 0,0,0,.7

        Widget: