<Box>

    pos_hint: {"center_x": .5, "center_y": .5}
    size_hint: None, None
    orientation: "vertical"
    md_bg_color: self.color
    size: 250, 200
    elevation: 1
    radius: 15


    MDBoxLayout:
        adaptive_height: True
        height: 150
        radius: [15,15,0,0]

        FitImage:
            source: root.image
            radius: [15,15,0,0]

    MDBoxLayout:
        orientation: "vertical"
        spacing: 4
        padding: [0,3,0,0]

        MDLabel:
            text: root.name
            adaptive_size: True
            font_size: 18
            bold: True
            pos_hint: {"center_x": .5}
            theme_text_color: "Custom"

        MDLabel:
            text: root.price
            adaptive_size: True
            font_size: 17
            pos_hint: {"center_x": .5}
            theme_text_color: "Custom"
            text_color: 0,0,0,.7

        Widget: